<section class="blog-section blog-section-two p-5">
	<div class="row">
		<div class="section-title-box text-center">
			<div class="section-tagline">Updates</div>
			<h2 class="section-title">Check Out Our Latest Updates</h2>
		</div>
		<div class="d-flex">
			<div class="col-lg-12">
				<div class="row row-gutter-y-155 m-0">
					@foreach (var item in Model.Updates)
					{
					<div class="col-lg-4">
						<div class="blog-card">
							<div class="blog-card-image">
									<img src="@Model._containerUrl@item.DescriptionImage" class="img-fluid" alt="img-184">
								<a href="news-details.html"></a>
							</div><!-- blog-card-image -->
							<div class="blog-card-date">
									<a href="news-details.html"> @item.DateAdded</a>
							</div><!-- blog-card-date -->
							<div class="blog-card-content">
								<div class="blog-card-meta">
									<span class="author">
										by<a href="news-details.html">@item.AddedBy</a>
									</span><!-- author -->
								</div><!-- blog-card-meta -->
									<h5><a href="news-details.html">@item.Title</a></h5>
									<p>
										@item.Description
